{
    "radius": "radius.round",
    "font-size": "typo.font-size-7",
    "font-weight": "typo.font-weight-medium",
    "padding": {
        "default": "space.xxxs space.xs",
        "circle": "space.xxxs",
        "large": "space.xxs space.s"
    },
    "border-color": {
        "primary": "color.grey-2",
        "secondary": "color.grey-2",
        "disabled": "color.grey-7"
    },
    "background-color": {
        "secondary": {
            "default": "color.transparent",
            "hover": "color.grey-9",
            "active": "color.grey-8"
        },
        "primary": {
            "default": "color.grey-2",
            "hover": "color.grey-1",
            "active": "color.grey-1"
        },
        "disabled": {
            "default": "color.grey-7",
            "hover": "color.grey-7",
            "active": "color.grey-7"
        }
    },
    "text-color": {
        "secondary": "color.grey-1",
        "primary": "color.white",
        "disabled": "color.grey-4"
    }
}
